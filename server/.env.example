# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutrilens
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_min_32_characters
JWT_REFRESH_SECRET=your_very_secure_refresh_token_secret_here_min_32_characters
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key_here
SMTP_FROM_EMAIL=noreply@nutrilens.app
SMTP_FROM_NAME=NutriLens

# API Configuration
CORS_ORIGIN=http://localhost:8081,exp://localhost:19000
API_BASE_URL=http://localhost:3000/v1
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Auth Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL_CHAR=false

# Security
BCRYPT_ROUNDS=10
VERIFY_EMAIL_TOKEN_EXPIRY=86400
RESET_PASSWORD_TOKEN_EXPIRY=3600
DELETION_GRACE_PERIOD=2592000

# Third-party Services (Optional)
SENTRY_DSN=
ANALYTICS_API_KEY=

# Admin Configuration
ADMIN_EMAIL=admin@nutrilens.app
DATA_RETENTION_DAYS=730
AUDIT_LOG_RETENTION_DAYS=180
